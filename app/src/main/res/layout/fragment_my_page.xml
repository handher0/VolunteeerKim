<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">


    <!-- 툴바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#F5F5F5">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="마이페이지"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:contentDescription="검색 버튼" />

        <ImageView
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="메뉴 버튼" />
    </LinearLayout>

    <!-- ID와 닉네임 표시 -->
    <TextView
        android:id="@+id/tv_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: user123 / 닉네임: 김성혁"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="24dp" />

    <!-- 버튼 목록 -->


    <Button
        android:id="@+id/btn_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/black"
        android:text="비밀번호 변경"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:backgroundTint="@color/colorPrimaryWeak"
        android:textColor="@android:color/black"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btn_customer_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="고객센터"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btn_bug_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/black"
        android:text="버그 문의" />
</LinearLayout>
